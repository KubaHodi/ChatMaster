<section class="vh-100 bg-dark">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-transparent text-white" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <div class="mb-md-5 mt-md-4 pb-5">

            <%= form_tag do %>
              <h2 class="fw-bold mb-2 text-uppercase">Register</h2>
              <p class="text-white-50 mb-5">Please enter your login and password</p>

              <div data-mdb-input-init class="form-outline form-white mb-4">          
                <%= text_field_tag :name, params[:name], class: "form-control form-control-lg" %>
                <%= label_tag :name, "Username" %>
              </div>

                
                
                
              <div data-mdb-input-init class="form-outline form-white mb-4">
                <%= password_field_tag :password, params[:password], class: "form-control form-control-lg" %>
                <%= label_tag :password, "Password" %>
              </div>

              <div data-mdb-input-init class="form-outline form-white mb-4">
                <%= password_field_tag :password_confirmation, params[:password], class: "form-control form-control-lg" %>
                <%= label_tag :password_confirmation, "Password confirmation" %>
              </div>
                <%= submit_tag "Register", class: "btn btn-outline-light btn-lg px-5" %>               
            <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>