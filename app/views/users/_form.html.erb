<section class="vh-max bg-dark">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-transparent text-white" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <div class="mb-md-5 mt-md-4 pb-5">
            <%= form_with model: user, url: register_path do |form| %>
            <% if @user.errors.any? %>
              <p class="text-danger"><%= @user.errors.full_messages.join(', ') %></p>
            <% end %>
              <h2 class="fw-bold mb-2 text-uppercase">Register</h2>
              <p class="text-white-50 mb-5">Please enter your login and password</p>

              <div data-mdb-input-init class="form-outline form-white mb-4">
                <%= form.text_field :username, class: "form-control form-control-lg" %>
                <%= form.label :username, "Username" %>
              </div>

              <div data-mdb-input-init class="form-outline form-white mb-4">
                <%= form.password_field :password, class: "form-control form-control-lg" %>
                <%= form.label :password, "Password" %>
              </div>

              <div data-mdb-input-init class="form-outline form-white mb-4">
                <%= form.password_field :password_confirmation,
                id: :user_password_confirmation,
                class: "form-control form-control-lg" %>
                <%= form.label :password_confirmation, "Password confirmation" %>
              </div>
                <%= form.submit class: "btn btn-outline-light btn-lg px-5" %>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
