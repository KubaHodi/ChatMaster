<section class="vh-100 bg-dark">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-transparent text-white" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <div class="mb-md-5 mt-md-4 pb-5">
            <%= form_with model: @user do |form| %>
            <% if flash[:notice] %>
              <p class="text-danger"><%= flash[:notice] %></p>
            <% end %>
              <h2 class="fw-bold mb-2 text-uppercase">Edit</h2>
              <div data-mdb-input-init class="form-outline form-white mb-4">
                <%= form.text_field :username, class: "form-control form-control-lg" %>
                <%= form.label :username, "Username" %>
              </div>
              
              <div data-mdb-input-init class="form-outline form-white mb-4">
                <%= form.file_field :avatar, class: "form-control form-control-lg" %>
                <%= form.label :avatar, "Avatar" %>
              </div>
              
                <%= form.submit class: "btn btn-outline-light btn-lg px-5" %>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
