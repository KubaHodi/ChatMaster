<%= render "form", invitation: @invitation %>
<div>
    <% if notice.present? %>
        <p class="text-danger"><%= notice %></p>
    <% end %>
    <% if @invitation.errors.any? %>
         <ul class="text-danger">
            <% @invitation.errors.full_messages.each do |m| %>
                <li> <%= m%> </li>
            <% end %>
        </ul>
    <% end %>
</div>